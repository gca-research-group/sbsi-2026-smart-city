  ISSN={2577-1655},
  month={Oct},}@INPROCEEDINGS{9220069,
  author={Ferrari, P. and Sisinni, E. and Carvalho, D. Fernandes and Depari, A. and Signoretti, G. and Silva, M. and Silva, I. and Silva, D.},
