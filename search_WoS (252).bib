Title = {Socialbots: Implications on the safety and reliability of Twitter-based
   services},
Booktitle = {2014 BRAZILIAN SYMPOSIUM ON COMPUTER NETWORKS AND DISTRIBUTED SYSTEMS
   (SBRC)},
Year = {2014},
Pages = {302-309},
Note = {32nd Brazilian Symposium on Computer Networks and Distributed Systems
   (SBRC), Florianopolis, BRAZIL, MAY 05-09, 2014},
Organization = {Dept Informat \& Stat; Dept Automat \& Syst; Univ Fed Santa Catarina;
