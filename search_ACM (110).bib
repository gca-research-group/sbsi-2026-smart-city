@inproceedings{10.1145/3491087.3493679,
author = {Loss, Stefano Momo},
title = {Using blockchain to provide trusted interoperability to system-of-systems in smart cities context},
year = {2021},
isbn = {9781450391559},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
