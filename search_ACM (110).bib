@inproceedings{10.1145/3428502.3428596,
author = {Lanza, Beatriz Barreto B. and Gil-Garcia, J. Ramon and Pardo, Theresa A.},
title = {What makes a city smart? Reconsidering the core components in the Brazilian context},
year = {2020},
isbn = {9781450376747},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3428502.3428596},
doi = {10.1145/3428502.3428596},
abstract = {Throughout the last decade, researchers have proposed different frameworks for studying cities and to guide practitioners in designing, implementing and evaluating smart city strategies. Some of these frameworks have emerged as more salient or relevant than others. This ongoing research paper seeks to understand if the dimensions, components, and elements proposed in the well-recognized framework called 'A comprehensive view of smart city components and elements' originally developed by Gil-Garcia, Pardo, and Nam [5], are present in the Brazilian context and if and how the framework might be revised to better understand the particularities of Brazilian cities. Through the use of a case study, it appears that the framework, in general terms and at the component level of the framework is useful as is, however, the results also indicate that there are some elements that could be reconsidered through elaborations and modifications to the current descriptions of some elements. Future research is needed with additional cities in the Brazilian context and beyond, but this first study seems to indicate the potential practical value of the preliminary elaborated framework.},
